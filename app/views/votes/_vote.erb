<div id="vote-container">
  <form class="up-vote" action="/votes" method="post">
    <input type="hidden" name="vote[question]" value="<%= question.id %>">
    <input type="hidden" name="vote[answer]" value="<%= answer.id %>">
    <input type="hidden" name="vote[comment]" value="<%= comment.id %>">
    <input type="hidden" name="vote[user_id]" value="<%= current_user.id %>">
    <input type="hidden" name="vote[value]" value="1">
    <input type="submit" value="Up">
  </form>
  <form class="down-vote" action="/votes" method="post">
    <input type="hidden" name="vote[question]" value="<%= question.id %>">
    <input type="hidden" name="vote[answer]" value="<%= answer.id %>">
    <input type="hidden" name="vote[comment]" value="<%= comment.id %>">
    <input type="hidden" name="vote[user_id]" value="<%= current_user.id %>">
    <input type="hidden" name="vote[value]" value="-1">
    <input type="submit" value="Down">
  </form>
</div>
